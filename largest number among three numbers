#include<stdio.h>

int main()
{
 int a,b,c,*pa, *pb, *pc;

 printf("Enter three numbers:\n");
 scanf("%d%d%d", &a,&b,&c);
 
 
 pa= &a;
 pb= &b;
 pc= &c;
 if(*pa > *pb && *pa > *pc)
 {
  printf("greatest is: %d", *pa);
 }
 else if(*pb > *pc && *pb > *pc)
 {
  printf("greatest is : %d", *pb);
 }
 else
 {
  printf("greatest = %d", *pc);
 }
 return 0;
}
